<div class="container center-element p-3" id="dashboard-container">
  <h1>Dashboard</h1>
  <div class="avatar-big" id="avatar-dash">
    <%= avatar(current_user) %>
  </div>
  <div class="d-flex justify-content-center align-items-center" id="dashboard-user">
    <h3>Hello <%= current_user.first_name.nil? ? current_user.email : current_user.first_name %>!</h3>
    <%= link_to edit_dashboard_path(current_user) do %>
      <i class="fa-solid fa-pen-to-square mx-2 edit-destroy-links "></i>
    <% end %>
    <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
      <i class="fa-solid fa-right-from-bracket edit-destroy-links "></i>
    <% end %>
  </div>

</div>



