    <%= f.text_field  :name, required: true, class: "contact-form-text-area my-2 w-100" %></br>

    <%= f.label "Votre mail" %></br>
    <%= f.text_field :email, required: true, class: "contact-form-text-area my-2 w-100"  %></br>

