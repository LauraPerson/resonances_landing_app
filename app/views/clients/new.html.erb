<div class="container">
  <div class="row flex-center">
    <div class="col-12 col-m-6 col-xl-4 my-4">
      <h2>Ajouter un nouveau client</h2>
      <%= simple_form_for @client, url: clients_path, method: :post do |f| %>
        <%= f.input :name, label:"Nom"  %>
        <%= f.input :photo, as: :file, label:"Logo du client"  %>
        <%= f.submit "Ajouter un client", class:"btn-primary" %>
      <% end %>
    </div>
  </div>
</div>