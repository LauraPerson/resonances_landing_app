<div class="container">
  <div class="row flex-center">
    <div class="col-12 col-m-6 col-xl-4 my-4">
      <h2>Ajouter un nouveau client</h2>
      <%= simple_form_for @client, url: clients_path, method: :post do |f| %>
        <%= f.input :name, label:"Nom"  %>
        <%= f.input :photo, as: :file, label:"Logo du client"  %>
        <%= f.submit "Ajouter un client", class:"btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<div class="container d-flex flex-column align-items-center ">
  <div class="d-flex justify-content-between w-100 border-bottom" >
    <h1 class=" ">Dashboard</h1>
    <div class="d-flex">
      <h3>#Clients</h3>
      <%= link_to new_client_path do %>
        <div class="btn-primary mx-2">
          <i class="fa-solid fa-user-plus"></i>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-4">
    <% @clients.each do |client| %>
      <div class="d-flex align-items-center justify-content-between my-2">
        <div class="d-flex align-items-center justify-content-between card-gnl card-30">
          <div class="d-flex align-items-center">
            <div class="avatar mx-2">
              <%= photo(client) %>
            </div>
            <%= client.name %>
          </div>
          <div class="mx-2">
            <%= link_to edit_client_path(client) do %>
              <i class="fa-solid fa-pen-to-square mx-2 edit-destroy-links "></i>
            <% end %>
            <%= link_to client_path(client), data: {turbo_method: :delete} do %>
              <i class="fa-solid fa-trash edit-destroy-links"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
