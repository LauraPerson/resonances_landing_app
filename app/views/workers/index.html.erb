
<div class="container d-flex flex-column align-items-center ">
  <div class="d-flex justify-content-between w-100 border-bottom" >
    <h1 class=" ">Dashboard</h1>
    <div class="d-flex">
      <h3>#Team</h3>
      <%= link_to new_worker_path do %>
        <div class="btn-primary mx-2">
          <i class="fa-solid fa-user-plus"></i>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-4">
    <% @workers.each do |worker| %>
      <div class="d-flex align-items-center justify-content-between my-2">
        <div class="d-flex align-items-center justify-content-between card-gnl card-30">
          <div class="d-flex align-items-center">
            <div class="avatar mx-2">
              <%= avatar(worker) %>
            </div>
            <%= worker.name %>
          </div>
          <div class="mx-2">
            <%= link_to edit_worker_path(worker) do %>
              <i class="fa-solid fa-pen-to-square mx-2 edit-destroy-links "></i>
            <% end %>
            <%= link_to worker_path(worker), data: {turbo_method: :delete} do %>
              <i class="fa-solid fa-trash edit-destroy-links"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>