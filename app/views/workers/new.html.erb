<div class="container">
  <div class="row flex-center">
    <div class="col-12 col-m-6 col-xl-4 my-4">
      <h2>Ajouter un nouveau membre</h2>
      <%= simple_form_for @worker, url: workers_path, method: :post do |f| %>
        <%= f.input :name, label:"Nom"  %>
        <%= f.input :job, label:"Fonction au sein de Résonances"  %>
        <%= f.input :link, label:"Réseaux Sociaux"  %>
        <%= f.input :order, label:"Ordre d'apparition sur la homepage"  %>
        <%= f.input :photo, as: :file, label:"Photo de profil"  %>
        <%= f.submit "Ajouter un membre", class:"btn-primary" %>
      <% end %>
    </div>
  </div>
</div>