
<div class="container d-flex flex-column align-items-center ">
  <div class="d-flex justify-content-between w-100 border-bottom" >
    <h1 class=" ">Dashboard</h1>
    <div class="d-flex">
      <h3>#Mentions LÃ©gales</h3>
      <%= link_to new_term_path do %>
        <div class="btn-primary mx-2">
          <i class="fa-solid fa-circle-plus"></i>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-4">
    <% @terms.each do |term| %>
      <div class="d-flex align-items-center justify-content-between my-2">
        <div class="d-flex align-items-center justify-content-between card-gnl card-30">
          <div class="d-flex align-items-center">
            <%= term.content %>
          </div>
          <div class="mx-2">
            <%= link_to edit_term_path(term) do %>
              <i class="fa-solid fa-pen-to-square mx-2 edit-destroy-links "></i>
            <% end %>
            <%= link_to term_path(term), data: {turbo_method: :delete} do %>
              <i class="fa-solid fa-trash edit-destroy-links"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
